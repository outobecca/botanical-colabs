def generate_plant_card(plant_data):
    # Create a styled HTML card with a detailed cultivation plan
    css = """
        .plant-card {
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 100%;
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background-color: #f9f9f9;
        }
        .plant-card h2 {
            text-align: center;
            color: #2c3e50;
            margin-top: 0;
            border-bottom: 2px solid #ecf0f1;
            padding-bottom: 10px;
        }
        .plant-card img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-bottom: 1px solid #ddd;
        }
        .plant-card .info-section {
            display: flex;
            justify-content: space-between;
            margin: 15px 0;
            font-size: 0.95em;
            color: #333;
        }
        .plant-card .info-section p {
            width: 48%;
            padding: 10px;
            background-color: #fff;
            border-left: 2px solid #bdc3c7;
        }
        .plant-card .cultivation-plan {
            margin-top: 20px;
            padding: 15px;
            background-color: #eee;
            border-left: 4px solid #27ae60;
            color: #2f353a;
        }
        .plant-card .cultivation-plan h4 {
            margin-top: 0;
            color: #27ae60;
        }
        .plant-card .cultivation-list {
            margin-left: 10px;
        }
        .plant-card .cultivation-list li {
            padding: 5px 0;
            border-left: 3px solid #27ae60;
        }
        @media (max-width: 600px) {
            .plant-card {
                margin: 10px;
                width: 90%;
            }
            .plant-card img {
                height: 150px;
            }
        }
    """
    
    cultivation_plan = f"""
        <div class="cultivation-plan">
            <h4>Recommended Cultivation</h4>
            <ul class="cultivation-list">
                <li>Light: {plant_data['light_requirements']}</li>
                <li>Watering: {plant_data['watering_schedule']}</li>
                <li>Temperature: {plant_data['temperature_range']}</li>
                <li>Fertilization: {plant_data['fertilization_schedule']}</li>
                <li>Pruning: {plant_data['pruning_schedule']}</li>
                <li>Pest Control: {plant_data['pest_control']}</li>
            </ul>
        </div>
    """
    
    return f"""
        <style>
            {css}
        </style>
        <div class="plant-card">
            <h2>{plant_data['name']}</h2>
            <img src="{plant_data['image"]}" alt="{plant_data['name']}}">
            <div class="info-section">
                <p><strong>Family:</strong> {plant_data['family']}</p>
                <p><strong>Type:</strong> {plant_data['plant_type']}</p>
            </div>
            {cultivation_plan}
        </div>
    """

